<script>
   
   let menuusuario=`<li class="header" ><span style="background-color:whitesmoke;">Olá <%=user['log_usuario']%></span></li>`
   menuusuario=menuusuario+'<li class="header">Navegação Principal</li>';
   

   menuusuario=menuusuario +'<%=menu%>'
   
   menuusuario=menuusuario+'<li><a class="sidebar-minify-btn" data-click="sidebar-minify" href="javascript:;"><i class="fa fa-angle-double-left"></i></a></li>'
   // Correção do HTML 
   menuusuario=menuusuario.replaceAll('&gt;', '>')
   menuusuario=menuusuario.replaceAll('&lt;', '<')
   menuusuario=menuusuario.replaceAll("&#34;","'")
   //console.log(menuusuario)
   
   // Criar Atributo 
   const vAtributo = document.createAttribute("data-widget");
   vAtributo.value = "tree";
   
   // Guardar Elemente id MenuSistema
   const menu=document.getElementById('menuSistema');
   // Criar Elemento UL
   let item = document.createElement("ul");
   // Incluir Class Nav    
   item.className='nav';
   item.setAttributeNode(vAtributo);
   item.innerHTML =menuusuario;
   menu.appendChild(item);




</script>