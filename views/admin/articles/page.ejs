<%- include('../../partials/headers.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>
   
<body>
  <div class="container">
    <hr>
    <h2>Artigos</h2>
    <hr>
    <% result.articles.rows.forEach(article=>{%>
          <div class="card">
              <div class="card-header">
                <%=article.title %>
              </div>
              <br>
              <div class="card-body">
                <a href="/<%=article.slug %>" class="btn btn-primary">Ler Artigo</a>
              </div>
          </div>
          
    <%}) %>
    <div class="row">
      <div class="col col-12">
        <%if (result.page>1 ) {%>
           <a style="float:left;" href="/articles/page/<%=result.page-1 %>"> <<< Prev</a>
        <%}%>
        <%if (result.next ){%>
          <a style="float:right;" href="/articles/page/<%=result.page+1 %>">Next >>></a>
        <%}%>

      </div>
      <hr>
   </div>
</div>

</body>
