<%- include('../../partials/headers.ejs') %>

    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h2>Artigos</h2>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titulo</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(article=>{%>
                    <tr>
                        <td><%=article.id    %> </td>
                        <td><%=article.title %> </td>
                        <td><%=article.slug  %> </td>
                        <td><%=article.category.title %></td>
                        <td>
                            <a href='/admin/articles/edit/<%=article.id%>'button class="btn btn-warning">Editar</a>
                            <form method="POST" onsubmit="confirmarDelecao(event,this);" action="/articles/delete" style="display:inline;">
                               <input type="hidden" name="id" value=<%=article.id%>>
                               <button class="btn btn-danger">Deletar</button>
                            </form>
                        </td>
                    </tr>

                <%}) %>
            
            </tbody>

        </table>
    </div>

 
<%- include('../../partials/footer.ejs') %>
<script>
   function confirmarDelecao(event,form){
        event.preventDefault();
        var decision=confirm('Deseja deletar artigo');
        if (decision){
            form.submit();
        }
   }    

</script>   